<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:orientation="vertical"
    tools:context="com.xiaozhang.myferal.FistActivity" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="分类"
         android:textColor="@color/text_black"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#FFFFFF"
        />
    <fragment
         android:id="@+id/sort_fragment_a"
         android:name="com.xiaozhang.myferal.SortFragmentA"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
    
    <fragment
        android:layout_weight="1"
        android:id="@+id/sort_fragment_B"
        android:name="com.xiaozhang.myferal.SortFragmentB"
        android:layout_width="match_parent"
        android:layout_height="360dp"></fragment>
    
     <RadioGroup       
        android:id="@+id/sort_ridaoGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rub_course_home_page_not_selected_bg"
            android:gravity="center"
             android:textColor="@color/text_black"
            android:text="首页"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
             android:textColor="@color/text_black"
            android:drawableTop="@drawable/rub_course_category_not_selected_bg"
            android:gravity="center"
            android:background="#fff000"
            android:checked="true"
            android:text="分类"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
             android:textColor="@color/text_black"
            android:drawableTop="@drawable/rub_course_group_not_selected_bg"
            android:gravity="center"
            android:text="圈子"
            android:textSize="16sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
             android:textColor="@color/text_black"
            android:drawableTop="@drawable/rub_course_me_not_selected_bg"
            android:gravity="center"
            android:text="我"
            android:textSize="16sp" />
    </RadioGroup>

   

</LinearLayout>
