<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/lv_my_sign_record_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <TextView
        android:id="@+id/lv_my_sign_record_1_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lv_my_sign_record_img"
        android:padding="2.5dp"
        android:text="汉昌IT岗前实训中心"
        android:textColor="@color/text5"
        android:textSize="10sp" />
    <!-- 分3端 -->

    <TextView
        android:id="@+id/lv_my_sign_record_2_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="2.5dp"
        android:text="天"
        android:textColor="@color/text5"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lv_my_sign_record_2_1_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lv_my_sign_record_2_tex"
        android:padding="2.5dp"
        android:text="5"
        android:textColor="@color/orange"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lv_my_sign_record_2_2_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lv_my_sign_record_2_1_tex"
        android:padding="2.5dp"
        android:text="余"
        android:textColor="@color/text5"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lv_my_sign_record_3_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_my_sign_record_1_tex"
        android:layout_toRightOf="@id/lv_my_sign_record_img"
        android:padding="2.5dp"
        android:text="二胡八段干货讲座"
        android:textColor="@color/text3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lv_my_sign_record_4_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_my_sign_record_3_tex"
        android:layout_toRightOf="@id/lv_my_sign_record_img"
        android:padding="2.5dp"
        android:text="02-01 上午 9:00"
        android:textColor="@color/text5"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lv_my_sign_record_5_tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/lv_my_sign_record_4_tex"
        android:padding="2.5dp"
        android:text="未受理"
        android:textColor="@color/red1"
        android:textSize="10sp" />

</RelativeLayout>