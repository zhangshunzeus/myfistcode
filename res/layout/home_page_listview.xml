<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rub_course_home_page_height" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="音乐类"
            android:textColor="#051B28"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/top_gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="更多"
            android:textColor="#fa7122"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/click_image_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/erhu" />

        <ImageView
            android:id="@+id/click_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/erhu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="二胡十段兴趣班"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="二胡十段兴趣班"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/apply_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已报1人   渝中汉昌"
            android:textColor="#686868"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/apply_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已报1人   渝中汉昌"
            android:textColor="#686868"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/yueqi_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yueqi_bg"
                android:padding="1dp"
                android:text="乐器"
                android:textColor="#686868"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/xiaoxue_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yueqi_bg"
                android:padding="1dp"
                android:text="小学"
                android:textColor="#686868"
                android:textSize="12sp" 
                />

            <TextView
                android:id="@+id/time_surplus_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余 3 天"
                android:textColor="#9B9B9B"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/yueqi_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yueqi_bg"
                android:padding="1dp"
                android:text="乐器"
                android:textColor="#686868"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/xiaoxue_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yueqi_bg"
                android:padding="1dp"
                android:text="小学"
                android:textColor="#686868"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time_surplus_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余 3 天"
                android:textColor="#9B9B9B"
                android:layout_weight="1"
                android:gravity="right" />
        </LinearLayout>
        
    </LinearLayout>


</LinearLayout>